{
  "name": "@nokiamon/api",
  "version": "0.0.1",
  "description": "NokiaMon API",
  "scripts": {
    "dev": "concurrently -k -p \"[{name}]\" -n \"TS,NODE\" -c \"yello.bold, cyan.bold\" \"yarn run tsc:watch\" \"yarn run start:hot\"",
    "build": "npm tsc",
    "tsc": "tsc",
    "tsc:watch": "tsc -w --preserveWatchOutput",
    "start": "node src/index.js",
    "start:hot": "nodemon -e js,d.ts,js.map --watch src/ \"src/index.js\""
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/http-errors": "^2.0.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.2.5",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.8",
    "express": "^4.18.2",
    "express-route-grouping": "^1.1.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.2.2", 
    "typescript": "^5.1.3",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "dotenv": "^16.1.4"
  }
}
